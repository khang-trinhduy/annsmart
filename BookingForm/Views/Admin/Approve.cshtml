@model BookingForm.Models.Request

<h4>Request</h4>
<hr />
<div class="container">
    <div class="row">
        <div class="col-12">
            <form asp-action="Approve" class="was-validated">
                <partial name="_StatusMessage" model="@TempData["StatusMessage"]" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="RequestName" class="control-label"></label>
                    <input readonly asp-for="RequestName" class="form-control" />
                    <span asp-validation-for="RequestName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Subject" class="control-label"></label>
                    <input readonly asp-for="Subject" class="form-control" />
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Contents" class="control-label"></label>
                    <input readonly asp-for="Contents" class="form-control" />
                    <span asp-validation-for="Contents" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Status" class="control-label"></label>
                    <select asp-for="Status" class="form-control">
                        <option value="1">Pending</option>
                        <option value="2">Approved</option>
                        <option value="3">Rejected</option>
                        <option value="4">Canceled</option>
                        <option value="5">Accepted</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="custom-control custom-checkbox my-1 mr-sm-2">
                        <input type="checkbox" class="custom-control-input" id="customControlInline" required>
                        <label class="custom-control-label" for="customControlInline">Tôi xin xác nhận những thông tin bên trên là hoàn toàn chính xác đồng thời đã nộp đủ những giấy tờ theo yêu cầu của công ty Annhome (Nếu như có sai xót tôi xin chịu hoàn toàn trách nhiệm).</label>
                    </div>
                    <div class="custom-control custom-checkbox my-1 mr-sm-2">
                        <input type="checkbox" class="custom-control-input" id="customControlInline1" required>
                        <label class="custom-control-label" for="customControlInline1">Xác nhận đã kiểm tra các giấy tờ, đồng ý cho thực hiện yêu cầu.</label>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="GetRequest">Back to List</a>
</div>

