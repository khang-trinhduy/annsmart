    <style>
        #test-label {
            margin-left: 20px;
        }
        .fa-folder-open {
            color: #f19911;
            margin-left: 20px
        }

        .test-container > #test-label {
            margin-left: 0;
            font-family: cursive;
            display: block;
        }

        .test-container {
            margin-top: 20px;
            border: 1px solid gainsboro;
            background: white;
            padding: 10px 10px 10px 10px;
            width: 322px;
        }

        .test-container:hover {
            cursor:pointer;
        }

    </style>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.29.2/sweetalert2.all.js"></script>
    <script>
        var data = [];
        $('.test-container').on('click', function () {
            var testname = $(this).text();
            var name = testname.trim().split(' ').join('_');
            var url = '@Url.Action("AttendTest","Home")' + '?test_name=' + name;
            Swal.mixin({
                title: 'Cài đặt',
                
                showCancelButton: true,
                
                animation: false,
                progressSteps: ['1', '2', '3'],
                confirmButtonText: 'Tiếp tục &rarr;'
            }).queue([
            {
                text: 'Số lượng câu hỏi',
                input: 'range',
                type: 'info',
                inputAttributes: {
                    min: 1,
                    max: 5,
                    step: 1
                },
                inputValue: 3
            },
            {
                text: 'Thời gian (phút)',
                input: 'range',
                type: 'info',
                inputAttributes: {
                    min: 5,
                    max: 60,
                    step: 5
                },
                inputValue: 25
            },
            {
                input: 'checkbox',
                inputValue: 1,
                inputPlaceholder: 'Hiện cả những câu hỏi đã đánh dấu'
            }]).then((result) => {
                if(result.value) {
                    data = result.value;
                    Swal.fire({
                        html: 'Chuyển đến trang kiểm tra sau <strong></strong> giây!',
                        timer: 5000,
                        onBeforeOpen: () => {
                        Swal.showLoading()
                        timerInterval = setInterval(() => {
                        Swal.getContent().querySelector('strong')
                        .textContent = Math.ceil(Swal.getTimerLeft()/1000)*1
                    }, 1000)
                    },
                    onClose: () => {
                        clearInterval(timerInterval)
                    }
                    }).then((result) => {
                        console.log(data);
                        var url = '@Url.Action("AttendTest", "Home")' + '?test_name=' + name + '&notc=' + data[0] + '&minutes=' + data[1] + '&isnotanswered=' + data[2];
                        console.log(url);
                        window.location.href = url;
                    })
                }
            })
        });

    </script>