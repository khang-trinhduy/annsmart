                </div>
                <div class="form-group">
                    <label asp-for="NCH21" class="control-label"></label>
                    <input type="number" asp-for="NCH21" class="form-control" />
                    <span asp-validation-for="NCH21" class="text-danger"></span>
                </div>
                <div class="form-group">
