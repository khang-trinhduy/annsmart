                        <option value="Đúng thời hạn">Đúng thời hạn</option>
                        <option value="Không đúng thời hạn">Không đúng thời hạn</option>

                    </select>
                    <span asp-validation-for="Deposit" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="IsActive" class="control-label">Thay đổi trạng thái của HĐ</label>
                    <p style="font-style:italic; font-family:'Times New Roman';color: red">Còn hiệu lực: HĐ đã vào tiền; Hết hiệu lực: HĐ hủy hoặc rút cọc hoặc quá thời gian quy định mà chưa vào tiền (Tổng kết)</p>
                    <select asp-for="IsActive">
                        <option value="true">Còn hiệu lực</option>
                        <option value="false">Hết hiệu lực</option>

                    </select>
                </div>
                <div class="form-group">
                    <label class="control-label">Ghi chú</label>
